general {
        colors = true
        interval = 5
}

order += "battery all"
order += "memory"
order += "tztime local"

battery all {
        format = "B: %status %percentage %remaining"
        status_chr = "âš¡ CHR"
        status_bat = "ðŸ”‹ BAT"
        status_unk = "? UNK"
        status_full = "FULL"
}

memory {
        format = "M: %used"
        threshold_degraded = "1G"
        format_degraded = "MEMORY < %available"
}

tztime local {
        format = "%a %d %b %Y %H:%M"
}
